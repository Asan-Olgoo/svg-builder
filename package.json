{
  "name": "@ezptrn/svg-builder",
  "version": "1.3.2",
  "description": "A library for develop svg",
  "author": "Asan Olgoo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Asan-Olgoo/svg-builder.git"
  },
  "bugs": {
    "url": "https://github.com/Asan-Olgoo/svg-builder/issues"
  },
  "homepage": "https://github.com/Asan-Olgoo/svg-builder#readme",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/cjs/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/node": "^22.5.5",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "lib"
  }
}
